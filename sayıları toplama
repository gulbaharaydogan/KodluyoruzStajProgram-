import java.util.*;

public class kod {
	public static void main(String[] args) {
		
		int sayı; 
		Scanner scan = new Scanner(System.in);
		
		System.out.println("sayı giriniz");
		sayı = scan.nextInt();
		double toplam = 0;
		
		while(sayı %2 == 0 ) {
		
			
			if(sayı % 2 == 0 || sayı %4 == 0) {
			toplam = toplam + sayı;
			System.out.println("tekrar sayı giriniz");
			sayı = scan.nextInt();
			}
			
		}
		System.out.println( "girdiğiniz tüm çift sayıların toplamı: " + toplam );
		
		
		
	}}
